<div class="jumbotron">
  <div class="container">
    <% @sneakers.each do |sneaker| %>
    <h2><%= sneaker.make %> <%= sneaker.model %></h2>
    <a href="/sneakers/<%= sneaker.id %>">
    <img src="<%= sneaker.image %>" alt="<%= sneaker.model %>">
    </a>
    <h3>Description:  <%= sneaker.description %></h3>
    <h4>Price:  $<%= sneaker.price %></h4>
    <p><a class="btn btn-default" href="/sneakers/<%= sneaker.id %>" role="button">View Details &raquo;</a></p>
    <% end %>
    </div>
  </div>
</div>