<div class="container">
  <h3>Edit a sneaker: </h3>
  <%= form_tag "/sneakers/#{ @sneaker.id }", method: :patch do %>
  <div>
    <%= label_tag :make, 'Brand: ' %>
    <%= text_field_tag :make, @sneaker.make %>
  </div>
  <div>
    <%= label_tag :model, 'Item name: ' %>
    <%= text_field_tag :model, @sneaker.model %>
  </div>
  <div>
    <%= label_tag :image, 'Image URL: ' %>
    <%= text_field_tag :image, @sneaker.image %>
  </div>
  <div>
    <%= label_tag :description, 'Description: ' %>
    <%= text_field_tag :description, @sneaker.description %>
  </div>
  <div>
    <%= label_tag :price, 'Price: ' %>
    <%= text_field_tag :price, @sneaker.price %>
  </div>
  <div>
    <%= label_tag :sneaker_in_stock?, 'In Stock: ' %>
    <%= text_field_tag :sneaker_in_stock?, @sneaker_in_stock %>
  </div>
  <div>
    <%= label_tag :supplier_id, 'Supplier ID: ' %>
    <%= text_field_tag :supplier_id, @supplier_id %>
  </div>
  <br>
  <div>
    <%= submit_tag "Edit Item", class:"btn btn-default" %>
  </div>
  <% end %>
</div>