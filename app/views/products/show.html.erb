<div class="container">
  <h1><%= @sneaker.make %> <%= @sneaker.model %></h1>
  <a href="/sneakers/<%= @sneaker.id %>">
  <img src="<%= @sneaker.image %>" alt="<%= @sneaker.model %>">
  </a>
  <h3>Price:  $<%= @sneaker.price %></h3> 
  <p>Description:  <%= @sneaker.description %></p>
  <p><a class="btn btn-default" href="#cart" role="button">Add To Cart &raquo;</a></p>
  <p><a class="btn btn-default" href="/sneakers/<%= @sneaker.id %>/edit" role="button">Edit &raquo;</a></p>
  <p><%= link_to 'Delete', "/sneakers/#{@sneaker.id}", method: :delete %></p>
</div>